FROM swaggerapi/swagger-ui:v5.9.1 AS swagger-ui

FROM nvidia/cuda:12.6.3-base-ubuntu22.04

LABEL org.opencontainers.image.source="https://github.com/pbusenius/asr-api"
LABEL org.opencontainers.image.description="ASR-API with NVIDIA Parakeet engine (NeMo)"

ENV PYTHON_VERSION=3.10
ENV ASR_ENGINE=parakeet

RUN export DEBIAN_FRONTEND=noninteractive \
    && apt-get -qq update \
    && apt-get -qq install --no-install-recommends \
    python${PYTHON_VERSION} \
    python${PYTHON_VERSION}-venv \
    python3-pip \
    libcudnn8 \
    libcublas-12-6 \
    libcublas-dev-12-6 \
    ffmpeg \
    curl \
    build-essential \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

RUN ln -s -f /usr/bin/python${PYTHON_VERSION} /usr/bin/python3 && \
    ln -s -f /usr/bin/python${PYTHON_VERSION} /usr/bin/python && \
    ln -s -f /usr/bin/pip3 /usr/bin/pip

WORKDIR /app

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

COPY . .
COPY --from=swagger-ui /usr/share/nginx/html/swagger-ui.css swagger-ui-assets/swagger-ui.css
COPY --from=swagger-ui /usr/share/nginx/html/swagger-ui-bundle.js swagger-ui-assets/swagger-ui-bundle.js

# Install dependencies for Parakeet (requires numpy<2.0.0 and NeMo toolkit)
RUN uv venv .venv && \
    . .venv/bin/activate && \
    UV_NO_VERIFY_HASHES=1 uv pip install \
    --extra-index-url https://download.pytorch.org/whl/cu126 \
    torch==2.7.1 torchaudio==2.7.1 && \
    UV_NO_VERIFY_HASHES=1 uv pip install \
    "numpy<2.0.0" \
    "fastapi>=0.115.14" \
    "uvicorn[standard]>=0.35.0" \
    "python-multipart>=0.0.20" \
    "ffmpeg-python>=0.2.0" \
    "openai-whisper>=20250625" \
    "faster-whisper>=1.1.1" \
    "transformers>=4.40.0" \
    "openai>=1.0.0" \
    "opentelemetry-api>=1.24.0" \
    "opentelemetry-sdk>=1.24.0" \
    "opentelemetry-instrumentation-fastapi>=0.45b0" \
    "opentelemetry-exporter-prometheus>=0.55b1" \
    "prometheus-client>=0.20.0" \
    "structlog>=24.1.0" \
    "tqdm>=4.67.1" \
    "llvmlite>=0.44.0" \
    "numba>=0.61.2" \
    "soundfile>=0.12.1" \
    "nemo_toolkit[asr]>=2.4.0"

# Download model during build
ARG ASR_MODEL=parakeet-tdt-0.6b-v3
ENV ASR_MODEL=${ASR_MODEL}
ENV ASR_MODEL_PATH=/app/models

RUN --mount=type=cache,target=/root/.cache \
    mkdir -p /app/models && \
    ASR_MODEL_PATH=/root/.cache uv run python scripts/download_model.py && \
    if [ -d "/root/.cache/huggingface" ]; then \
        cp -r /root/.cache/huggingface /app/models/ 2>/dev/null || true; \
    fi && \
    echo "Model checked/downloaded to /app/models"

EXPOSE 9000

ENV PATH="/app/.venv/bin:${PATH}"

ENTRYPOINT ["asr-api"]

